@model List<Venue>

<link rel="stylesheet" href="~/css/card.css" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Venue</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Venue" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Venue
            </a>
        </div>
    </div>
    <div class="card-container">
        @foreach (var obj in Model)
        {
            <div class="card" style="width: 18rem; height: 16rem;">
                <img src=@obj.ImageLink class="card-img-top" />
                <div class="container">
                    <h4 class="card-title">@obj.Name</h4>
                    <p class="city">@obj.City</p>
                </div>
            </div>
        }

    </div>
</div>