@model List<Artist>

<link rel="stylesheet" href="~/css/card.css" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Artists</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Artist" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Artist
            </a>
        </div>
    </div>
    <div class="card-container">
        @if (Model == null)
        {
            <p>No Artist have been added</p>
        }
        else
        {
            @foreach (var obj in Model)
            {
                <a asp-controller="Artist" asp-action="ViewDetails" asp-route-id="@obj.Id">
                    <div class="card">
                        <div class="card-image" style="margin: 0.5rem; width: 18rem; height: 16rem; overflow: hidden;">
                            <img src=@obj.ImageLink class="card-img-top" style="width: 100%; height: 100%; object-fit: cover"/>
                        </div>
                        <div class="container">
                            <h4 class="card-title">@obj.Name</h4>
                            <p class="city">@obj.City</p>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
</div>